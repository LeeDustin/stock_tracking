<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fa fa-money-check-alt"></i> Check Profit</h1>
      <%- include ("./partials/messages"); %>
      <form action="/checkProfit" method="POST">
        <div class="form-group">
          <label for="stockName" class="form-label">Stock Name</label>
          <input
            type="stockName"
            id="stockName"
            name="stockName"
            class="form-control"
            placeholder="Enter Stock Name"
            value="<%= typeof stockName != 'undefined' ? stockName : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="transactionType" class="form-label">Transaction Type</label>
          <%- include ("./partials/options"); %>
        </div>
        <div class="form-group">
          <label for="origPrice" class="form-label">Stock Price</label>
          <input
            type="origPrice"
            id="origPrice"
            name="origPrice"
            class="form-control"
            placeholder="Enter Stock Price"
            value="<%= typeof origPrice != 'undefined' ? origPrice : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="stockAmount" class="form-label">Stock Amount</label>
          <input
            type="stockAmount"
            id="stockAmount"
            name="stockAmount"
            class="form-control"
            placeholder="Enter Stock Amount"
            value="<%= typeof stockAmount != 'undefined' ? stockAmount : '' %>"
          />
        </div>
        <button
          type="submit"
          class="btn btn-primary btn-block"
          style="margin-top: 10px"
          id="submit"
          onclick="show()"
        >
          Submit
        </button>
      </form>
      <p class="lead mt-4">
        <a href="/">Back to Dashboard</a>
      </p>
    </div>
  </div>
</div>
